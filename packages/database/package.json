{
  "name": "@repo/database",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema.ts",
    "./connection": "./src/database.ts",
    "./utils": "./src/utils.ts"
  },
  "scripts": {
    "dev": "drizzle-kit studio",
    "db:clean": "bun scripts/clean.ts",
    "db:seed": "bun scripts/seed.ts",
    "db:seed:seats": "bun scripts/seed-seats-only.ts",
    "db:seed:seats:fresh": "bun db:clean && bun db:seed:seats",
    "db:seed:fresh": "bun db:clean && bun db:seed",
    "db:seed:invoice-gateway": "bun scripts/seed-invoice-gateway.ts",
    "db:migrate": "bun scripts/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "clean": "rm -rf .turbo node_modules"
  },
  "dependencies": {
    "dotenv": "17.2.3",
    "drizzle-orm": "0.44.7",
    "drizzle-seed": "0.3.1",
    "postgres": "3.4.7"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/bun": "latest",
    "drizzle-kit": "0.31.5",
    "typescript": "5.9.3"
  }
}
